<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.paul_nikki.cse5236.appointmentpal.EditAppointmentActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit Appointment"
        android:id="@+id/lbl_headerr"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Appointment:"
        android:id="@+id/lbl_apptHeader"
        android:layout_below="@+id/lbl_headerr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="8:00 AM Mon. Oct 12, 2015"
        android:id="@+id/lbl_apptWhen"
        android:layout_below="@+id/lbl_apptHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dr. Smith - Dublin Office"
        android:id="@+id/lbl_apptWhere"
        android:layout_below="@+id/lbl_apptWhen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reschedule"
        android:id="@+id/btn_reschedule"
        android:textSize="25dp"
        android:layout_marginTop="97dp"
        android:layout_below="@+id/btn_map"
        android:layout_toLeftOf="@+id/btn_map"
        android:layout_toStartOf="@+id/btn_map"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Office"
        android:id="@+id/btn_contactOffice"
        android:textSize="25dp"
        android:layout_below="@+id/btn_cancelAppt"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Appointment"
        android:id="@+id/btn_cancelAppt"
        android:textSize="25dp"
        android:layout_below="@+id/btn_reschedule"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:id="@+id/btn_map"
        android:layout_below="@+id/lbl_apptWhere"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
