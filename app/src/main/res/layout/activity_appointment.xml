<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.paul_nikki.cse5236.appointmentpal.AppointmentActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Appointment"
        android:id="@+id/lbl_headerr"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date:"
        android:id="@+id/lbl_Date"
        android:layout_below="@+id/lbl_headerr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textIsSelectable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Monday, Oct 12th, 2015"
        android:id="@+id/lbl_apptDate"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/lbl_Date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time:"
        android:id="@+id/lbl_time"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:layout_below="@+id/lbl_Date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Doctor:"
        android:id="@+id/lbl_doctor"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:layout_below="@+id/lbl_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location:"
        android:id="@+id/lbl_location"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:layout_below="@+id/lbl_doctor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="8:00 AM"
        android:id="@+id/lbl_apptTime"
        android:textSize="25dp"
        android:layout_alignTop="@+id/lbl_time"
        android:layout_alignRight="@+id/lbl_apptDate"
        android:layout_alignEnd="@+id/lbl_apptDate"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dr. Smith"
        android:id="@+id/lbl_apptDoctor"
        android:textSize="25dp"
        android:layout_alignTop="@+id/lbl_doctor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="123 5th Street Dublin, Oh"
        android:id="@+id/lbl_apptLocation"
        android:textSize="25dp"
        android:layout_below="@+id/lbl_location"
        android:layout_alignRight="@+id/lbl_apptDoctor"
        android:layout_alignEnd="@+id/lbl_apptDoctor"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Appointment"
        android:id="@+id/btn_editAppt"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/lbl_doctor"
        android:layout_marginBottom="54dp"
        android:textSize="25dp"
        android:layout_alignLeft="@+id/lbl_headerr"
        android:layout_alignStart="@+id/lbl_headerr"/>
</RelativeLayout>
